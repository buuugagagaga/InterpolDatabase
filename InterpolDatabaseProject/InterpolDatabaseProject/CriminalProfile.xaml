            </TextBlock>
        </ScrollViewer>
        <Button Name="ChangeProfileButton" Grid.Row="2" Grid.Column="1" Click="ChangeProfileButton_OnClick">Change profile</Button>
    </Grid>
</controls:MetroWindow>
